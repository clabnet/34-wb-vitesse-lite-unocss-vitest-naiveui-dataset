{
  "semi": false,
  "singleQuote": true,
  "endOfLine": "lf",
  "printWidth": 160,
  "jsxSingleQuote": true,
  "singleAttributePerLine": false,
  "bracketSameLine": true,
  "quoteProps": "as-needed",
  "overrides": [
    {
      "files": [
        "*.yaml",
        "*.yml"
      ],
      "options": {
        "tabWidth": 2,
        "printWidth": 88
      }
    },
    {
      "files": [
        "*.json"
      ],
      "options": {
        "printWidth": 200
      }
    }
  ]
}